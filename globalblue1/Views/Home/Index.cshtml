@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <p>Current Value: <span id="valueDisplay">0</span></p>
    <button id="incrementBtn">+</button>
    <button id="decrementBtn">-</button>
</div>

<script>
    let currentValue = 0;

    document.getElementById('incrementBtn').addEventListener('click', async () => {
        try {
            const response = await fetch('https://localhost:7058/api/home/add', {
                method: 'POST',
                headers: {
                    'X-API-KEY': 'globalblue1234',
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(currentValue),
            });

            if (response.ok) {
                const newValue = await response.json();
                currentValue = newValue;
                document.getElementById('valueDisplay').innerText = newValue;
            } else {
                alert('Error incrementing the value');
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    });

</script>
